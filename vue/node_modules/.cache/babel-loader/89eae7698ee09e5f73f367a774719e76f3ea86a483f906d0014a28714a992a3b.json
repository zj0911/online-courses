{"ast":null,"code":"export default {\n  data() {\n    let scoreId = this.$route.query.id;\n    return {\n      user: JSON.parse(localStorage.getItem('xm-user') || '{}'),\n      scoreId: scoreId,\n      scoreData: {},\n      rightData: [],\n      scoreShare: false,\n      ordered: false,\n      input: window.location.href\n    };\n  },\n  created() {\n    this.loadScore();\n    this.checkCourse();\n    this.getRightData();\n  },\n  methods: {\n    loadScore() {\n      this.$request.get('/score/selectById/' + this.scoreId).then(res => {\n        if (res.code === '200') {\n          this.scoreData = res.data;\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    getRightData() {\n      this.$request.get('/score/selectAll').then(res => {\n        if (res.code === '200') {\n          this.rightData = res.data;\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    shareWeb() {\n      this.scoreShare = true;\n    },\n    downloadFile(url) {\n      location.href = url;\n    },\n    async copyAndRedirect() {\n      let url = this.input; // 获取当前网页的 URL\n      try {\n        // 复制 URL 到剪贴板\n        await navigator.clipboard.writeText(url);\n        console.log('当前网页的 URL 已复制到剪贴板');\n        setTimeout(() => {\n          // 延迟一会儿跳转到微信\n          window.location.href = `weixin://`;\n        }, 500); // 延迟 500 毫秒确保复制操作完成\n      } catch (err) {\n        console.error('复制失败:', err);\n      } finally {\n        this.scoreShare = false; // 关闭对话框\n      }\n    },\n    //购买课程\n    buy() {\n      let data = {\n        scoreId: this.scoreId,\n        userId: this.user.id,\n        score: this.scoreData.price\n      };\n      this.$request.post('/scoreOrders/add', data).then(res => {\n        if (res.code === '200') {\n          this.$message.success('购买成功');\n          this.loadScore();\n          this.checkCourse();\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    //判断订单购买状态\n    checkCourse() {\n      this.$request.get('scoreOrders/selectAll', {\n        params: {\n          userId: this.user.id,\n          scoreId: this.scoreId\n        }\n      }).then(res => {\n        if (res.code === '200') {\n          if (res.data?.length > 0) {\n            this.ordered = true;\n          }\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    }\n  }\n};","map":{"version":3,"names":["data","scoreId","$route","query","id","user","JSON","parse","localStorage","getItem","scoreData","rightData","scoreShare","ordered","input","window","location","href","created","loadScore","checkCourse","getRightData","methods","$request","get","then","res","code","$message","error","msg","shareWeb","downloadFile","url","copyAndRedirect","navigator","clipboard","writeText","console","log","setTimeout","err","buy","userId","score","price","post","success","params","length"],"sources":["src/views/front/ScoreDetail.vue"],"sourcesContent":["<template>\r\n  <div class=\"main-content\">\r\n    <div style=\"width: 70%; margin: 30px auto; min-height: 1000px\">\r\n      <div style=\"text-align: center\">\r\n        <el-button type=\"success\">{{ scoreData.type === 'VIDEO'? '视频课' : '图文课' }}</el-button>\r\n        <span style=\"font-size: 24px; font-weight: bold; color: #333333; margin-left: 20px\">{{ scoreData.name }}</span>\r\n      </div>\r\n      <div style=\"text-align: center; margin-top: 15px\">\r\n<!--        <span style=\"color: red\" v-if=\"scoreData.price > 0\">￥ {{ scoreData.price }} / 元</span>-->\r\n        <span style=\"color: red\" v-if=\"scoreData.price === 0\">公开课</span>\r\n        <span style=\"color: red; margin-left: 20px\" v-if=\"scoreData.discount > 0\">折后价: {{(scoreData.discount * 0.1 * scoreData.price).toPrecision(2) }}/积分</span>\r\n        <span style=\"color: #666666; margin-left: 50px\">发布时间：{{ scoreData.time }}</span>\r\n      </div>\r\n\r\n      <!--   课程保密区域   -->\r\n      <div>\r\n        <div style=\"font-size: 20px; font-weight: bold;\">课程资料</div>\r\n        <div v-if=\"scoreData.price === 0 || ordered\">\r\n\r\n          <el-row :gutter=\"20\" v-if=\"scoreData.type==='VIDEO'\">\r\n            <!-- 左侧：视频卡片 -->\r\n            <el-col :span=\"18\">\r\n              <el-card class=\"box-card\" style=\"height: 500px;border-radius: 10px; margin-top: 20px\">\r\n                <div style=\"display: flex; align-items: center;\">\r\n                  <div v-if=\"scoreData.type==='VIDEO'\" style=\"height: 50px; width: 50px; background-color: rgba(55,154,222,0.5); border-radius: 10px; display: flex; justify-content: center; align-items: center\">\r\n                    <i class=\"el-icon-video-camera\" style=\"font-size: 40px;\"></i>\r\n                  </div>\r\n                  <span style=\"margin-left: 10px; font-size: 22px; font-weight: bold; width: 40%\" class=\"overflowShow\">{{scoreData.name}}</span>\r\n                  <div style=\"margin-left: auto\">\r\n                    <el-button class=\"el-icon-share\" style=\"font-size: 23px; border: none;\" @click=\"shareWeb()\"></el-button>\r\n                    <el-button class=\"el-icon-download\"  style=\"font-size: 23px; border: none;\" @click=\"downloadFile(scoreData.video)\"></el-button>\r\n                  </div>\r\n                </div>\r\n                <video :src=\"scoreData.video\" v-if=\"scoreData.type === 'VIDEO'\" controls style=\"width: 100%; height: 380px; border-radius: 5px; margin-top: 20px\"></video>\r\n              </el-card>\r\n            </el-col>\r\n\r\n            <!-- 右侧：课程缩略图 -->\r\n            <el-col :span=\"6\">\r\n              <el-card class=\"box-card\" style=\"border-radius: 10px; height: 500px; overflow-y: auto\">\r\n                <el-row :gutter=\"20\">\r\n                  <el-col :span=\"24\" v-for=\"(item, index) in rightData\" :key=\"index\" style=\"margin-bottom: 20px;\">\r\n                    <a :href=\"'/front/scoreDetail?id='+item.id\">\r\n                      <img :src=\"item.img\" alt=\"\" style=\"width: 100%; height: 100px; border-radius: 5px; border: 1px solid #cccccc\">\r\n                    </a>\r\n                    <div style=\"color: #333333; margin-top: 10px;\" class=\"overflowShow\">{{ item.name }}</div>\r\n                  </el-col>\r\n                </el-row>\r\n              </el-card>\r\n            </el-col>\r\n          </el-row>\r\n\r\n\r\n          <div style=\"margin-top: 20px\" v-if=\"scoreData.file && scoreData.file.trim() !== ''\">\r\n            资料链接：<a :href=\"scoreData.file\" target=\"_blank\">{{ scoreData.file }}</a>\r\n          </div>\r\n          <div style=\"margin-top: 20px\" v-else>暂无其他资料提供</div>\r\n        </div>\r\n        <div v-else>\r\n          <span style=\"color: red; margin-right: 20px\">该课程属于付费课程，购买后可解锁</span>\r\n          <el-button type=\"warning\" size=\"mini\" @click=\"buy\">购买课程</el-button>\r\n        </div>\r\n      </div>\r\n      <!--   课程介绍区域   -->\r\n      <div style=\"margin-top: 50px\">\r\n        <div style=\"font-size: 20px; font-weight: bold\">课程介绍</div>\r\n        <div style=\"margin-top: 10px; font-size: 14px; \" v-html=\"scoreData.content\" class=\"w-e-text w-e-text-container\"></div>\r\n      </div>\r\n    </div>\r\n\r\n    <el-dialog title=\"课程分享\" :visible.sync=\"scoreShare\" width=\"50%\" :close-on-click-modal=\"false\" destroy-on-close>\r\n      <div class=\"w-e-text w-e-text-container\"></div>\r\n      <el-input v-model=\"input\"></el-input>\r\n      <el-button type=\"primary\" style=\"justify-content: center; margin-top: 10px\" @click=\"copyAndRedirect\">复制链接并跳转微信</el-button>\r\n    </el-dialog>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  data() {\r\n    let scoreId = this.$route.query.id\r\n    return {\r\n      user: JSON.parse(localStorage.getItem('xm-user') || '{}'),\r\n      scoreId: scoreId,\r\n      scoreData: {},\r\n      rightData:[],\r\n      scoreShare: false,\r\n      ordered: false,\r\n      input: window.location.href\r\n    }\r\n  },\r\n  created() {\r\n    this.loadScore()\r\n    this.checkCourse()\r\n    this.getRightData()\r\n  },\r\n  \r\n  methods: {\r\n    loadScore(){\r\n      this.$request.get('/score/selectById/' + this.scoreId).then(res=>{\r\n        if(res.code === '200'){\r\n          this.scoreData = res.data\r\n        }else{\r\n          this.$message.error(res.msg)\r\n        }\r\n      })\r\n    },\r\n\r\n    getRightData() {\r\n      this.$request.get('/score/selectAll').then(res => {\r\n        if (res.code === '200') {\r\n          this.rightData = res.data\r\n        } else {\r\n          this.$message.error(res.msg)\r\n        }\r\n      })\r\n    },\r\n\r\n    shareWeb(){\r\n      this.scoreShare = true\r\n    },\r\n\r\n    downloadFile(url){\r\n      location.href = url\r\n    },\r\n\r\n    async copyAndRedirect() {\r\n      let url = this.input; // 获取当前网页的 URL\r\n      try {\r\n        // 复制 URL 到剪贴板\r\n        await navigator.clipboard.writeText(url);\r\n        console.log('当前网页的 URL 已复制到剪贴板');\r\n\r\n        setTimeout(() => {\r\n          // 延迟一会儿跳转到微信\r\n          window.location.href = `weixin://`;\r\n        }, 500); // 延迟 500 毫秒确保复制操作完成\r\n\r\n      } catch (err) {\r\n        console.error('复制失败:', err);\r\n      } finally {\r\n        this.scoreShare = false; // 关闭对话框\r\n      }\r\n    },\r\n\r\n    //购买课程\r\n    buy(){\r\n      let data = {\r\n        scoreId: this.scoreId,\r\n        userId: this.user.id,\r\n        score: this.scoreData.price\r\n      }\r\n      this.$request.post('/scoreOrders/add', data).then(res=>{\r\n        if(res.code === '200'){\r\n          this.$message.success('购买成功')\r\n          this.loadScore()\r\n          this.checkCourse()\r\n        }else{\r\n          this.$message.error(res.msg)\r\n        }\r\n      })\r\n    },\r\n\r\n    //判断订单购买状态\r\n    checkCourse(){\r\n      this.$request.get('scoreOrders/selectAll',{\r\n        params: {\r\n          userId: this.user.id,\r\n          scoreId: this.scoreId\r\n        }\r\n      }).then(res=>{\r\n        if(res.code === '200'){\r\n          if (res.data?.length > 0) {\r\n            this.ordered = true\r\n          }\r\n        }else{\r\n          this.$message.error(res.msg)\r\n        }\r\n      })\r\n    },\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n</style>"],"mappings":"AA+EA;EACAA,KAAA;IACA,IAAAC,OAAA,QAAAC,MAAA,CAAAC,KAAA,CAAAC,EAAA;IACA;MACAC,IAAA,EAAAC,IAAA,CAAAC,KAAA,CAAAC,YAAA,CAAAC,OAAA;MACAR,OAAA,EAAAA,OAAA;MACAS,SAAA;MACAC,SAAA;MACAC,UAAA;MACAC,OAAA;MACAC,KAAA,EAAAC,MAAA,CAAAC,QAAA,CAAAC;IACA;EACA;EACAC,QAAA;IACA,KAAAC,SAAA;IACA,KAAAC,WAAA;IACA,KAAAC,YAAA;EACA;EAEAC,OAAA;IACAH,UAAA;MACA,KAAAI,QAAA,CAAAC,GAAA,6BAAAvB,OAAA,EAAAwB,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAC,IAAA;UACA,KAAAjB,SAAA,GAAAgB,GAAA,CAAA1B,IAAA;QACA;UACA,KAAA4B,QAAA,CAAAC,KAAA,CAAAH,GAAA,CAAAI,GAAA;QACA;MACA;IACA;IAEAT,aAAA;MACA,KAAAE,QAAA,CAAAC,GAAA,qBAAAC,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAC,IAAA;UACA,KAAAhB,SAAA,GAAAe,GAAA,CAAA1B,IAAA;QACA;UACA,KAAA4B,QAAA,CAAAC,KAAA,CAAAH,GAAA,CAAAI,GAAA;QACA;MACA;IACA;IAEAC,SAAA;MACA,KAAAnB,UAAA;IACA;IAEAoB,aAAAC,GAAA;MACAjB,QAAA,CAAAC,IAAA,GAAAgB,GAAA;IACA;IAEA,MAAAC,gBAAA;MACA,IAAAD,GAAA,QAAAnB,KAAA;MACA;QACA;QACA,MAAAqB,SAAA,CAAAC,SAAA,CAAAC,SAAA,CAAAJ,GAAA;QACAK,OAAA,CAAAC,GAAA;QAEAC,UAAA;UACA;UACAzB,MAAA,CAAAC,QAAA,CAAAC,IAAA;QACA;MAEA,SAAAwB,GAAA;QACAH,OAAA,CAAAT,KAAA,UAAAY,GAAA;MACA;QACA,KAAA7B,UAAA;MACA;IACA;IAEA;IACA8B,IAAA;MACA,IAAA1C,IAAA;QACAC,OAAA,OAAAA,OAAA;QACA0C,MAAA,OAAAtC,IAAA,CAAAD,EAAA;QACAwC,KAAA,OAAAlC,SAAA,CAAAmC;MACA;MACA,KAAAtB,QAAA,CAAAuB,IAAA,qBAAA9C,IAAA,EAAAyB,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAC,IAAA;UACA,KAAAC,QAAA,CAAAmB,OAAA;UACA,KAAA5B,SAAA;UACA,KAAAC,WAAA;QACA;UACA,KAAAQ,QAAA,CAAAC,KAAA,CAAAH,GAAA,CAAAI,GAAA;QACA;MACA;IACA;IAEA;IACAV,YAAA;MACA,KAAAG,QAAA,CAAAC,GAAA;QACAwB,MAAA;UACAL,MAAA,OAAAtC,IAAA,CAAAD,EAAA;UACAH,OAAA,OAAAA;QACA;MACA,GAAAwB,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAC,IAAA;UACA,IAAAD,GAAA,CAAA1B,IAAA,EAAAiD,MAAA;YACA,KAAApC,OAAA;UACA;QACA;UACA,KAAAe,Q